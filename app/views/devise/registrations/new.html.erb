

<div class="sign-in-form">
  <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>


      <div class="field">
        <%= f.text_field :name, placeholder: :name, class: "text-entry" %>
      </div>


      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: :email, class: "text-entry" %>
      </div>



      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "#{:password.capitalize()} - #{@minimum_password_length} characters minimum", class: "text-entry" %>
      </div>


      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: :password_confirmation, class: "text-entry" %>
      </div>

      <br>

    <div class="actions">
      <%= f.submit "Sign up", class: "login-btn" %>
    </div>
  <% end %>

    <br>

    <p>...OR...</p>

    <br>

  <%= render "devise/shared/links" %>
</div>
